<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@drawable/admin_bg"
    tools:context="com.example.syedwaleedsohail.guide.Updation_ACT">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Update"
        android:textStyle="bold"
        android:textSize="30dp"
        android:fontFamily="@font/abel"
        android:textColor="#000"
        android:gravity="center"/>

    <ImageView
        android:layout_width="180dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:src="@drawable/line"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/update_heading"
        android:hint="Heading"
        android:background="@drawable/edit_txt_style"
        android:padding="10dp"
        android:layout_marginTop="60dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Explanation"
        android:background="@drawable/edit_txt_style"
        android:padding="10dp"
        android:id="@+id/update_explaination"
        android:layout_marginTop="30dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Example"
        android:background="@drawable/edit_txt_style"
        android:padding="10dp"
        android:id="@+id/update_exmple"
        android:layout_marginTop="30dp"/>
    <Button
        android:layout_width="180dp"
        android:layout_gravity="center"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_update"
        android:text="update"/>
    </LinearLayout>

</LinearLayout>

