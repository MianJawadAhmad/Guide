<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/main_bg"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.syedwaleedsohail.guide.starting_ACT"
    tools:showIn="@layout/app_bar_starting__act">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="#fff"
        android:onClick="btn_login"
        android:textSize="18dp"
        android:fontFamily="@font/abel"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/btn_login_bg"
        android:layout_marginLeft="10dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Intro to Programming"
        android:textSize="20dp"
        android:textColor="#fff"
        android:layout_marginTop="50dp"
        android:padding="20dp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/button_new"
        app:fontFamily="@font/abeezee"
        android:onClick="btn_prog"
        android:id="@+id/btn_prog"
        android:layout_marginLeft="20dp" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        app:fontFamily="@font/abeezee"
        android:textSize="20dp"
        android:textColor="#fff"
        android:padding="20dp"
        android:textStyle="bold"
        android:layout_marginEnd="20dp"
         android:text="Intro to Computing"
        android:background="@drawable/button_new2"
        android:layout_margin="20dp"
        android:onClick="btn_comp"
        android:id="@+id/btn_comp"/>


</LinearLayout>
