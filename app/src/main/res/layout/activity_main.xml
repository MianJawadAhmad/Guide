<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/data_insertion_xml"
    android:layout_height="wrap_content" >
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.syedwaleedsohail.guide.MainActivity">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Insert Data"
            android:textStyle="bold"
            android:textSize="30dp"
            android:fontFamily="@font/abel"
            android:textColor="#000"
            android:gravity="center"/>

        <ImageView
            android:layout_width="180dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:src="@drawable/line"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_heading"
            android:background="@drawable/edit_txt_style"
            android:padding="10dp"
            android:layout_marginTop="50dp"
            android:hint="Heading"
            android:inputType="text"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_explaination"
            android:layout_marginTop="30dp"
            android:background="@drawable/edit_txt_style"
            android:padding="10dp"
            android:hint="Explaination"
            android:inputType="text"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_example"
            android:layout_marginTop="30dp"
            android:background="@drawable/edit_txt_style"
            android:padding="10dp"
            android:hint="Example"
            android:inputType="text"/>

        <Button
            android:layout_width="180dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="18dp"
            android:fontFamily="@font/abel"
            android:background="@drawable/button_new2"
            android:id="@+id/btn_submitProg"
            android:text="insert"/>

    </LinearLayout>


</LinearLayout>
</ScrollView>
